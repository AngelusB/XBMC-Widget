<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/recent_tv_item"
    android:background="#33000000"
    android:padding="2dp">
    
	<ImageView 
        android:id="@+id/fanArt"
        android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="#A9A9A9" 
		android:gravity="center" 
		android:padding="1px"
		android:src="@drawable/default_fan_art"
		android:adjustViewBounds="true" />

	<TextView 
        android:id="@+id/default_header"
        android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center" 
		android:textSize="20sp"
		android:maxLines="2"
		android:ellipsize="end"
		android:paddingBottom="25sp" />
		
	<ImageView 
        android:id="@+id/new_icon"
        android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="1px"
		android:src="@drawable/new_label" />
	
    
    <LinearLayout
        android:layout_width="wrap_content"
		android:layout_height="45sp"
		android:layout_alignBottom="@id/fanArt"
		android:layout_alignLeft="@id/fanArt"
		android:layout_alignRight="@id/fanArt"
		android:background="#AA000000"
		android:layout_marginLeft="1px"
		android:layout_marginRight="1px"
		android:layout_marginBottom="1px"
		android:paddingLeft="6dp"
		android:paddingRight="6dp"
		android:paddingTop="4dp"
		android:paddingBottom="4dp">
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            
            <TextView 
		    	android:id="@+id/item_header"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:gravity="center_vertical"
		    	android:textColor="#ffffff"
		    	android:textStyle="bold"
		    	android:textSize="14sp"
		    	android:ellipsize="end"
		    	android:singleLine="true"
		    	android:lines="1" />
              
	        <TextView 
		    	android:id="@+id/item_subheader"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:gravity="center_vertical"
		    	android:textColor="#ffcccccc"
		    	android:textStyle="bold"
		    	android:textSize="12sp"
		    	android:ellipsize="end"
		    	android:singleLine="true" 
		    	android:lines="1" />  
        </LinearLayout>
        
        <TextView 
	    	android:id="@+id/age"
	    	android:layout_width="wrap_content"
	    	android:layout_height="fill_parent"
	    	android:textColor="#ffffff"
	    	android:textStyle="bold"
	    	android:gravity="right|center_vertical"
	    	android:layout_marginLeft="4dp"
	    	android:textSize="12sp" />
        
    </LinearLayout>   
</RelativeLayout>
